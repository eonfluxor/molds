# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

def common_pods!
 pod 'Delayed','~>2.2.2'
end

target 'MOLD_BOILERPLATE-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MOLD_BOILERPLATE-iOS
  common_pods!
  
  target 'MOLD_BOILERPLATE-iOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods!
  end

end

target 'MOLD_BOILERPLATE-macOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MOLD_BOILERPLATE-macOS
  common_pods!
  
  target 'MOLD_BOILERPLATE-macOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods!
    
  end

end

