  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for MOLD_BOILERPLATE-tvOS
  common_pods!
  
  target 'MOLD_BOILERPLATE-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods!
    
  end

